<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="up_left">
        <item name="android:background">#009930</item>
        <item name="android:tag">#009930</item>
    </style>

    <style name="up_right">
        <item name="android:background">#999900</item>
        <item name="android:tag">#999900</item>
    </style>

    <style name="down_left">
        <item name="android:background">#99000f</item>
        <item name="android:tag">#99000f</item>
    </style>

    <style name="down_right">
        <item name="android:background">#070580</item>
        <item name="android:tag">#070580</item>
    </style>

    <style name="home_screen">
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="home_screen_button">
        <item name="android:paddingTop">30dp</item>
    </style>

    <style name="colored_bar">
        <item name="android:paddingLeft">0px</item>
        <item name="android:paddingRight">0px</item>
    </style>
    <style name="divisor">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#c0c0c0</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="labels">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
